@using Orchard.ContentManagement;
@using Orchard.Security;
@{
    ContentItem contentItem = Model.ContentItem;
    var membership = WorkContext.Resolve<IMembershipService>();
}

<hr />
<div class="media">
    <div class="package-logo media-left">
        <a href="@Url.ItemDisplayUrl(contentItem)">
            <img class="media-object" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
        </a>
</div>
    <div class="media-body">
        <h3 class="media-heading">
            @Html.ItemDisplayLink(contentItem) 
            <a href="#" role="button" class="hidden-xs pull-right btn btn-default">@T("Download")</a>
        </h3>

        <p class="package-by">
            @{
                var owner = Model.ContentItem.Package.CommonPart.Owner;
            }

            @if(owner != null) {
                @T("By {0}", owner.User.DisplayName.Value)
            }
        </p>
        
        @Html.Raw(Model.ContentItem.Package.BodyPart.Text)

    </div>
</div>

